<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.teleinfo.bidadmin.blockchain.mapper.BlockMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="blockResultMap" type="cn.teleinfo.bidadmin.blockchain.entity.Block">
        <id column="id" property="id"/>
        <result column="number" property="number"/>
        <result column="hash" property="hash"/>
        <result column="parentHash" property="parentHash"/>
        <result column="nonce" property="nonce"/>
        <result column="sha3Uncles" property="sha3Uncles"/>
        <result column="logsBloom" property="logsBloom"/>
        <result column="transactionsRoot" property="transactionsRoot"/>
        <result column="stateRoot" property="stateRoot"/>
        <result column="receiptsRoot" property="receiptsRoot"/>
        <result column="author" property="author"/>
        <result column="miner" property="miner"/>
        <result column="mixHash" property="mixHash"/>
        <result column="difficulty" property="difficulty"/>
        <result column="totalDifficulty" property="totalDifficulty"/>
        <result column="extraData" property="extraData"/>
        <result column="size" property="size"/>
        <result column="gasLimit" property="gasLimit"/>
        <result column="gasUsed" property="gasUsed"/>
        <result column="timestamp" property="timestamp"/>
        <result column="transaction_count" property="transactionCount"/>
    </resultMap>


    <select id="selectBlockPage" resultMap="blockResultMap">
        select * from bif_block
    </select>

    <select id="findLastNumber" resultType="Integer">
        select max(number ) from bif_block
    </select>

</mapper>
